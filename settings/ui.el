;; disable menubar (to enable, M-x menu-bar-mode)
(menu-bar-mode -1)

;; disable toolbar (to enable, M-x tool-bar-mode)
(tool-bar-mode -1)

;; disable scroll bars (to enable M-x scroll-bar-mode)
(scroll-bar-mode -1)

;; -- Inhibit startup screen --
(setq inhibit-startup-screen t)

;; remove fringes from the sides
(fringe-mode 0)
